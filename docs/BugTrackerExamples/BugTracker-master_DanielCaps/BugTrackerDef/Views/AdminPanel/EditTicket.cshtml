@model BugTrackerDef.Models.ViewModels.TicketViewModel

@{
    ViewData["Title"] = "EditTicket";
    Layout = "~/Views/AdminPanel/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Edit Ticket</h3>
            </div>
            <div class="card-body">
                <form asp-action="EditTicket" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="TicketID" type="hidden" class="form-control" />
                    <input asp-for="Project_ID" type="hidden" class="form-control" />
                    <input asp-for="EmployeeID" type="hidden" class="form-control" />
                    <input asp-for="CreatedDate" type="hidden" class="form-control" />
                    <input asp-for="ProjectName" type="hidden" class="form-control" />
                    <input asp-for="Submitter" type="hidden" class="form-control" />
                    <input asp-for="TicketType" type="hidden" class="form-control" />
                    <input asp-for="CurrentImage" type="hidden" class="form-control" />

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"
                                  placeholder="Enter Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AssignedDev" class="control-label"></label>
                        <select class="form-control" asp-for="AssignedDev">
                            @foreach (var user in Model.Employees)
                            {
                                <option>@user.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="AssignedDev" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketPriority" class="control-label"></label>
                        <select class="form-control" asp-for="TicketPriority">
                            <option>Low</option>
                            <option>Medium</option>
                            <option>High</option>
                            <option>Urgent</option>
                        </select>
                        <span asp-validation-for="TicketPriority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TicketStatus" class="control-label"></label>
                        <select class="form-control" asp-for="TicketStatus">
                            <option>InDevelopment</option>
                            <option>Required</option>
                            <option>Accepted</option>
                            <option>Finished</option>
                        </select>
                        <span asp-validation-for="TicketStatus" class="text-danger"></span>
                    </div>
                    <div>
                        <label class="control-label">Change Image</label>
                        <br />
                        <input asp-for="Image" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="DetailsProject" asp-controller="AdminPanel" asp-route-id="@Model.Project_ID">Cancel</a>
</div>
