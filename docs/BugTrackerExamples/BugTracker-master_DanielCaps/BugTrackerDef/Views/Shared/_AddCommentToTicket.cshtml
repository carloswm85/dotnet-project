@model BugTrackerDef.Domain.Comment


<div>
    <form asp-action="AddCommentToTicket" asp-route-id="@Model.TicketID">
        <div class="row">
            <div class="col-sm-10">
                <input asp-for="Text" class="form-control" placeholder="Comment here..." />
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary">Comment</button>
            </div>
        </div>
    </form>
</div>
